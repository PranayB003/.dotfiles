// Place your key bindings in this file to override the defaultsauto[]
[
    // General shortcuts
    {
        // Create a new folder while the file explorer is active
        "key": "cmd+shift+n",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        // Create a new file while the file explorer is active
        "key": "cmd+n",
        "command": "explorer.newFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
    },
    {
        // Next Side Bar View
        "key": "ctrl+tab",
        "command": "workbench.action.nextSideBarView",
        "when": "sideBarFocus"
    },
    {
        // Previous Side Bar View
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousSideBarView",
        "when": "sideBarFocus"
    },
    {
        // Toggle focus between editor and side bar
        "key": "cmd+0",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "sideBarFocus || terminalHasBeenCreated && terminalFocus || terminalIsOpen && terminalFocus || terminalTabsFocus || terminalProcessSupported && terminalFocus"
    },
    {
        // Switch to the pane on the right
        "key": "alt+cmd+right",
        "command": "workbench.action.navigateRight"
    },
    {
        // Switch to the pane on the left
        "key": "alt+cmd+left",
        "command": "workbench.action.navigateLeft"
    },
    // Terminal shortcuts
    {
        // Focus Terminal / Toggle Visibility
        "key": "cmd+m",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        // Close the currently focused terminal pane
        "key": "cmd+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalHasBeenCreated && terminalFocus && !terminalEditorFocus || terminalIsOpen && terminalFocus && !terminalEditorFocus || terminalProcessSupported && terminalFocus && !terminalEditorFocus"
    },
    {
        // Create new terminal
        "key": "cmd+n",
        "command": "workbench.action.terminal.newInActiveWorkspace",
        "when": "terminalHasBeenCreated && terminalFocus || terminalIsOpen && terminalFocus || terminalProcessSupported && terminalFocus"
    },
    {
        // Switch to next terminal instance
        "key": "ctrl+tab",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        // Switch to previous terminal instance
        "key": "ctrl+shift+tab",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        // Focus back to terminal if terminal tabs are focused
        "key": "cmd+shift+\\",
        "command": "workbench.action.terminal.focus",
        "when": "terminalHasBeenCreated && terminalTabsFocus || terminalIsOpen && terminalTabsFocus || terminalProcessSupported && terminalTabsFocus"
    },
    {
        // New terminal in editor pane
        "key": "shift+cmd+m shift+cmd+n",
        "command": "workbench.action.createTerminalEditor"
    },
    {
        // Move current terminal to editor pane
        "key": "shift+cmd+m shift+cmd+up",
        "command": "workbench.action.terminal.moveToEditor"
    },
    {
        // Move current terminal to terminal pane
        "key": "shift+cmd+m shift+cmd+down",
        "command": "workbench.action.terminal.moveToTerminalPanel"
    },
    // Removed Keybindings
    {
        "key": "shift+cmd+m",
        "command": "-workbench.actions.view.problems",
        "when": "workbench.panel.markers.view.active"
    },
    {
        "key": "alt+cmd+right",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "alt+cmd+left",
        "command": "-workbench.action.previousEditor"
    },
]